# Copy to .env and adjust as needed
# Host-side port mapping for docker-compose.yml (host -> container:3000)
HOST_PORT=3000

# AI provider selection (currently defaults to copilot)
AI_PROVIDER=copilot

# Model name used by Copilot SDK session
COPILOT_MODEL=gpt-4.1

# Increase this if you see: "Timeout after 60000ms waiting for session.idle"
COPILOT_TIMEOUT_MS=180000

# Optional: provide a GitHub token instead of relying on copilot CLI interactive login
# COPILOT_GITHUB_TOKEN=ghp_xxx
